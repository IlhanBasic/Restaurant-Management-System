<Page x:Class="RestaurantManagementSystem.View.pageStaff"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestaurantManagementSystem.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pageStaff">

    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnStaff" Content="Zaposleni" Style="{DynamicResource ConfirmButtonStyle}" Background="{DynamicResource bgColor}" Click="btnStaff_Click"/>
            <Button x:Name="btnTypeStaff" Content="Tip zaposlenog" Style="{DynamicResource ConfirmButtonStyle}" Background="{DynamicResource bgColor}" Click="btnTypeStaff_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1" >
            <Separator Margin="0,10,0,10" Height="2" Background="#2596be"/>
            <Frame x:Name="showPage" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Page>
